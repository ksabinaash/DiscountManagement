@model IGrid<OfferManagement.Models.ValidCall>

@{
    ViewBag.Title = @System.Configuration.ConfigurationManager.AppSettings["ValidCallsInformation"];
}
<div class="text-center"><h2>@ViewBag.Title</h2></div>

<script>
    $(document).ready(function () {

        if ('@ViewBag.ExportPermission' == 'True') {
            $("#divExport").show();
        }
        else {
            $("#divExport").hide();
        }


        $(document).on("click", "#chkResponded", function (e) {
            if (document.getElementById("chkResponded").checked) {
                document.getElementById('lblResponded').innerHTML = 'Responded';
            }
            else {
                document.getElementById('lblResponded').innerHTML = 'Not Responded';
            }
        });

        $(document).on("click", "#btnModalPopup", function (e) {

            //var productId1 = $(this).closest("tr").find("td").eq(1).text()

            //console.log("from close row value" + productId1);

            var callId = $(this).data('id');

            console.log("from btn value : "+ callId);

            //PrepareModalPopup(callId);

            var route = '@Url.Action("PrepareModalPopup", "CRMCalls")?id=' + callId;

            $('#partial').load(route);

            $('#validCallsModal').modal('show');
        });


        });


</script>


<div class="container">
    <input type="checkbox" id="chkResponded" value="Responded">
    <label id="lblResponded">Not Responded</label>
</div>

<div class="container" id="divExport">
    <a style="float: right;" href="@(Url.Action("ExportIndex") + "?" + ViewContext.HttpContext.Request.QueryString)">Export</a>
</div>
<br />
<div class="table-responsive">
    @(new HtmlGrid<OfferManagement.Models.ValidCall>(Html, Model))
</div>

<!-- Modal -->
<div class="modal fade" id="validCallsModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" id="exampleModalLabel"> @System.Configuration.ConfigurationManager.AppSettings["ValidCallsInformationEdit"]</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container" id="partial">
                    @*@Html.Partial("ValidCallsInformationEdit", Session["ValidCallsEdit"])*@
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


