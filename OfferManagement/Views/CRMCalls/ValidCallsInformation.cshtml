@model IGrid<OfferManagement.Models.ValidCall>

@{
    ViewBag.Title = @System.Configuration.ConfigurationManager.AppSettings["ValidCallsInformation"];
}
<div class="text-center"><h2>@ViewBag.Title</h2></div>

<script>
    $(document).ready(function () {

        if ('@ViewBag.ExportPermission' == 'True') {
            $("#divExport").show();
        }
        else {
            $("#divExport").hide();
        }
    });

    document.addEventListener('rowclick', function (e) {

        console.log('data: ', e.detail.data);
        console.log('grid: ', e.detail.grid);
        console.log('original event: ', e.detail.originalEvent);
    });


</script>



<div class="container" id="divExport">
    <a style="float: right;" href="@(Url.Action("ExportIndex") + "?" + ViewContext.HttpContext.Request.QueryString)">Export</a>
</div>
<br />
<div>
    @(new HtmlGrid<OfferManagement.Models.ValidCall>(Html, Model))
</div>

<!-- Modal -->
<div class="modal fade" id="validCallsModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" id="exampleModalLabel"> @System.Configuration.ConfigurationManager.AppSettings["ValidCallsInformationEdit"]</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container">
                    @Html.Partial("ValidCallsInformationEdit", Session["ValidCallsEdit"] as OfferManagement.Models.ValidCall)
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


